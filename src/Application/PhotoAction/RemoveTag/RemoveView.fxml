<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="Application.PhotoAction.RemoveTag.RemoveTagController"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text text="The list of tags for this photo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Text text="(Hold ctrl to select multiple tags)" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ListView fx:id="tagsToChoose" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"
              GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
    <Text text="Remove the selected tag(s):" GridPane.columnIndex="0"
          GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    <Button text="Remove" onAction="#handleRemoveTagAction"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>

</GridPane>
